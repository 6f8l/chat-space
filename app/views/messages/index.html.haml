.container
  .nav
    .nav__name
      %span
        =current_user.name
      %ul.nav__name__lists
        %li.nav__name__lists__list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.nav__name__lists__list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'

    .nav__room
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %p.nav__room__name
            = group.name
          %p.nav__room__comment
            =メッセージはまだありません。

  .chat
    .chat__info
      .chat__info-left
        .chat__info-left__name
          %p プログラミング初心者
        .chat__info-left__members
          %p Members: あつき
      .chat__info-right
        %a.btn Edit
    .chat__contents
      .chat__contents__content
        .chat__contents__content-top
          .chat__contents__content-top__user あつき
          .chat__contents__content-top__timestamp 2018/03/11 10:05:22
        .chat__contents__content__text 勉強頑張りましょう
      .chat__contents__content
        .chat__contents__content-top
        .chat__contents__content__text 勉強頑張りましょう
    %form{:action => "/", :method => "post"}
      %input{:name => "text", :size => "40", :placeholder => "type a message"}
      %i.fa.fa-image
      .chat__form__btn
        %span Send
